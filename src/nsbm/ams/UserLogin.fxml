<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="paneUserLogin" prefHeight="600.0" prefWidth="450.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nsbm.ams.UserLoginController">
    <stylesheets>
        <URL value="@userlogin.css" />
    </stylesheets>
   <children>
      <Label layoutX="55.0" layoutY="150.0" text="Login">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Label>
      <Label layoutX="55.0" layoutY="180.0" text="Logging you in as an user">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="55.0" layoutY="222.0" text="Email address">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtEmail" layoutX="55.0" layoutY="247.0" prefHeight="25.0" prefWidth="330.0" />
      <Label layoutX="55.0" layoutY="287.0" text="Password">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="txtPass" layoutX="55.0" layoutY="312.0" prefHeight="25.0" prefWidth="330.0" />
      <Button fx:id="btnLogin" layoutX="300.0" layoutY="362.0" mnemonicParsing="false" onAction="#loginUser" prefHeight="30.0" prefWidth="85.0" text="Login">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label layoutX="55.0" layoutY="367.0" text="Don't have an account?">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Hyperlink fx:id="linkSignup" layoutX="208.0" layoutY="363.0" onAction="#toSignup" text="Sign Up">
         <font>
            <Font size="14.0" />
         </font>
      </Hyperlink>
      <Hyperlink fx:id="linkBack" layoutX="50.0" layoutY="530.0" onAction="#toBack" text="Back">
         <font>
            <Font size="14.0" />
         </font>
      </Hyperlink>
   </children>
</AnchorPane>
